{% extends '@XutimCore/admin/base.html.twig' %}

{% block pageTitle %}{{ 'Pages'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumbHeader %}
    <twig:Xutim:Admin:Breadcrumbs>
        <li class="breadcrumb-item"><a href="{{ path('admin_analytics_dashboard') }}">{{ 'Analytics'|trans({}, 'admin') }}</a></li>
        <li class="breadcrumb-item active">{{ 'Pages'|trans({}, 'admin') }}</li>
    </twig:Xutim:Admin:Breadcrumbs>
{% endblock %}

{% block pageMenu %}
    {{ include('@XutimAnalytics/admin/analytics/_date_range_selector.html.twig', {preset: preset, range: range}) }}
{% endblock %}

{% block body %}
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Top Pages'|trans({}, 'admin') }}</h3>
                </div>
                <div class="table-responsive">
                    {% set maxPageViews = pages|map(p => p.totalPageviews)|sort|last|default(1) %}
                    <table class="table table-vcenter card-table table-borderless">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs fw-bold opacity-7">{{ 'Page'|trans({}, 'admin') }}</th>
                                <th class="text-uppercase text-secondary text-xxs fw-bold opacity-7">{{ 'Views'|trans({}, 'admin') }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for page in pages %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin_analytics_page', {path: page.path, preset: preset}) }}">
                                            {{ page.path }}
                                        </a>
                                    </td>
                                    <td class="text-secondary">{{ page.totalPageviews|number_format }}</td>
                                    <td class="w-50">
                                        <div class="progress progress-xs">
                                            <div class="progress-bar bg-warning" style="width: {{ (page.totalPageviews / maxPageViews * 100)|round }}%"></div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-muted">{{ 'No data'|trans({}, 'admin') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
